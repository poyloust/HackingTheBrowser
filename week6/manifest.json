{
    
    "manifest_version":2,
    "name":"TaaaaabOD",
    "version":"1.1",
    "description":"Help managing the tabs clutter into one page with auto-saving.",

    "chrome_url_overrides" : {
        "newtab": "welcome.html"
    },

    "browser_action":{
        "default_title":"TabOD",
        "default_popup":"popup.html",
        "default_icon": {                    
            "16": "imgs/16.png",           
            "24": "imgs/24.png",           
            "32": "imgs/32.png"            
        }
    },
    "permissions":[
        "tabs",
        "bookmarks"
    ],

    "background":{
        "scripts":["background.js"],
        "persistent":false
    },

    "icons":{
        "16": "imgs/16.png",
        "48": "imgs/48.png",
       "128": "imgs/128.png" 
    }

}